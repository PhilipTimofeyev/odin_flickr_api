<h2> Search Flickr! </h2>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Enter user name:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<% unless @photos_list.nil? %>
	<% @photos_list.each do |photo| %>
		<%= image_tag("https://live.staticflickr.com/#{photo.server}/#{photo.id}_#{photo.secret}.jpg") %> 
	<% end %>
<% end %>